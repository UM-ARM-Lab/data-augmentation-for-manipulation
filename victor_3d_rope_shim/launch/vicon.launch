<launch>
    <arg name="live" default="true"/>
    <include file="$(find victor_3d_rope_shim)/launch/static_transforms.launch">
        <arg name="use_sim_time"    value="false"/>
        <arg name="use_mocap_shims" value="true"/>
    </include>

    <include file="$(find lightweight_vicon_bridge)/launch/vicon_bridge.launch" if="$(arg live)">
        <arg name="use_sim_time" value="false"/>
    </include>

    <include file="$(find victor_3d_rope_shim)/launch/vicon_transform_replacements.launch" unless="$(arg live)">
        <arg name="use_sim_time"    value="false"/>
    </include>
</launch>
