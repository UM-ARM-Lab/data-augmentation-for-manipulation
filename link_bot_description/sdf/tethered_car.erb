<%
length = ENV['length'].to_f
link_length  = ENV['link_length'].to_f
mass = 0.1
radius = 0.005
n_links = (length / link_length).to_i
collision_link_length = link_length * 1.00
link_mass = 0.5/n_links
colors = ["Red", "Orange", "Yellow", "Green", "Blue", "Purple", "White", "Black"]
n_colors = colors.length
%>
<sdf version="1.6">
    <model name="link_bot">
        <pose frame="">0 0 0.01 0 0 0</pose>

        <% for i in 1..n_links %>
        <link name="link_<%=i%>">
            <pose frame=""><%=(i-1)*link_length%> 0 0 3.14159 -1.57079 3.14159</pose>
            <inertial>
                <pose frame="">0 0 <%=-link_length/2%> 0 0 0</pose>
                <mass><%=link_mass%></mass>
                <inertia>
                    <ixx><%=1.0/12.0*link_mass*(3*radius*radius + link_length*link_length)%></ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy><%=1.0/12.0*link_mass*(3*radius*radius + link_length*link_length)%></iyy>
                    <iyz>0</iyz>
                    <izz><%=0.5*link_mass*radius*radius%></izz>
                </inertia>
            </inertial>
            <collision name="link_<%=i%>_collision">
                <pose frame="">0 0 <%=-link_length / 2.0%> 0 0 0</pose>
                <geometry>
                    <box>
                        <size><%=2*radius%> <%=2*radius%> <%=collision_link_length%></size>
                    </box>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>0.001</mu>
                            <mu2>0.001</mu2>
                        </ode>
                    </friction>
                </surface>
            </collision>
            <visual name="link_<%=i%>_visual">
                <cast_shadows>0</cast_shadows>
                <pose frame="">0 0 <%=-link_length / 2.0%> 0 0 0</pose>
                <geometry>
                    <cylinder>
                        <length><%=link_length%></length>
                        <radius><%=radius%></radius>
                    </cylinder>
                </geometry>
                <material>
                    <script>
                        <name>Gazebo/<%=colors[i%n_colors]%></name>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                    </script>
                </material>
            </visual>
        </link>
        <%end%>

        <% for i in 1..n_links-1 %>
        <joint name="joint_<%=i%>" type="revolute">
            <parent>link_<%=i%></parent>
            <child>link_<%=i+1%></child>
            <pose>0 0 0 0 0</pose>
            <axis>
                <xyz>0 0 1</xyz>
                <dynamics>
                    <damping>0.002</damping>
                    <friction>0.015</friction>
                    <spring_reference>0</spring_reference>
                    <spring_stiffness>0.0001</spring_stiffness>
                </dynamics>
                <use_parent_model_frame>1</use_parent_model_frame>
            </axis>
        </joint>
        <% end %>

        <link name='car_body'>
            <pose frame=''><%=link_length*n_links%> 0 0 0 0 0</pose>
            <inertial>
                <pose frame=''>0 0 0 0 0 0</pose>
                <mass>0.1</mass>
                <inertia>
                    <ixx>0.00002333</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.00002333</iyy>
                    <iyz>0</iyz>
                    <izz>0.00002</izz>
                </inertia>
            </inertial>
            <collision name='car_body_collision'>
                <pose frame=''>0 0 0 0 0 0</pose>
                <geometry>
                    <cylinder>
                        <radius>0.02</radius>
                        <length>0.04</length>
                    </cylinder>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>0.05</mu>
                            <mu2>0.05</mu2>
                        </ode>
                    </friction>
                </surface>
            </collision>
            <visual name='car_body_visual'>
                <cast_shadows>0</cast_shadows>
                <pose frame=''>0 0 0 0 0 0</pose>
                <geometry>
                    <cylinder>
                        <radius><%=4*radius%></radius>
                        <length><%=2*radius%></length>
                    </cylinder>
                </geometry>
                <material>
                    <script>
                        <name>Gazebo/Red</name>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                    </script>
                </material>
            </visual>
        </link>

        <joint name="car_body_joint" type="fixed">
            <parent>car_body</parent>
            <child>link_<%=n_links%></child>
            <pose>0 0 <%=-link_length%> 0 0 0</pose>
            <axis>
                <xyz>0 0 1</xyz>
                <use_parent_model_frame>1</use_parent_model_frame>
                <limit>
                    <effort>10</effort>
                    <velocity>5</velocity>
                </limit>
                <dynamics>
                    <damping>0</damping>
                    <friction>0</friction>
                </dynamics>
            </axis>
            <physics>
                <ode>
                    <limit>
                        <cfm>0</cfm>
                        <erp>0.2</erp>
                    </limit>
                </ode>
            </physics>
        </joint>

        <link name='right_wheel'>
            <pose>0.0 -0.0313 0.021 0 1.57079 1.57079</pose>
            <inertial>
                <mass>0.01</mass>
                <inertia>
                    <ixx>6.96908333e-07</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>6.96908333e-07</iyy>
                    <iyz>0</iyz>
                    <izz>1.125e-06</izz>
                </inertia>
                <pose>0 0 0 0 0 0</pose>
            </inertial>
            <visual name='right_wheel_visual'>
                <pose>0 0 0 0 0 0</pose>
                <geometry>
                    <cylinder>
                        <radius>0.0145</radius>
                        <length>0.0127</length>
                    </cylinder>
                </geometry>
                <material>
                    <script>
                        <name>Gazebo/DarkGray</name>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                    </script>
                </material>
            </visual>
            <collision name='right_wheel_collision'>
                <pose>0 0 0 0 0 0</pose>
                <max_contacts>2</max_contacts>
                <geometry>
                    <cylinder>
                        <radius>0.0145</radius>
                        <length>0.0127</length>
                    </cylinder>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>0.32</mu>
                            <mu2>0.48</mu2>
                            <fdir1>0 0 1</fdir1>
                            <slip1>0</slip1>
                            <slip2>0</slip2> <!-- increases "drifting" -->
                        </ode>
                    </friction>
                    <contact>
                        <ode>
                            <soft_cfm>1.7e-10</soft_cfm>
                            <soft_erp>0.17</soft_erp>
                            <kp>1e9</kp>
                            <kd>5e10</kd>
                            <max_vel>0.01</max_vel>
                            <min_depth>0</min_depth>
                        </ode>
                    </contact>
                </surface>
            </collision>
        </link>

        <link name='left_wheel'>
            <pose>0.0 0.0313 0.021 0 1.57079 1.57079</pose>
            <inertial>
                <mass>0.01</mass>
                <inertia>
                    <ixx>6.96908333e-07</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>6.96908333e-07</iyy>
                    <iyz>0</iyz>
                    <izz>1.125e-06</izz>
                </inertia>
            </inertial>
            <visual name='left_wheel_visual'>
                <pose>0 0 0 0 0 0</pose>
                <geometry>
                    <cylinder>
                        <radius>0.0145</radius>
                        <length>0.0127</length>
                    </cylinder>
                </geometry>
                <material>
                    <script>
                        <name>Gazebo/DarkGray</name>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                    </script>
                </material>
            </visual>
            <collision name='left_wheel_collision'>
                <max_contacts>2</max_contacts>
                <pose>0 0 0 0 0 0</pose>
                <geometry>
                    <cylinder>
                        <radius>0.0145</radius>
                        <length>0.0127</length>
                    </cylinder>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>0.32</mu>
                            <mu2>0.48</mu2>
                            <fdir1>0 0 1</fdir1>
                            <slip1>0</slip1>
                            <slip2>0</slip2>
                        </ode>
                    </friction>
                    <contact>
                        <ode>
                            <soft_cfm>1.7e-10</soft_cfm>
                            <soft_erp>0.17</soft_erp>
                            <kp>1e9</kp>
                            <kd>5e10</kd>
                            <max_vel>0.01</max_vel>
                            <min_depth>0</min_depth>
                        </ode>
                    </contact>
                </surface>
            </collision>
        </link>

        <joint name='left_wheel_joint' type='revolute'>
            <parent>base</parent>
            <child>left_wheel</child>
            <pose>0 0 0 0 0 0</pose>
            <axis>
                <xyz>0 0 1</xyz>
                <limit>
                    <effort>0.016</effort> <!-- 16 kg-cm -->
                    <velocity>41.88</velocity> <!-- ~400 rpm -->
                </limit>
                <dynamics>
                    <damping>0.00058</damping>
                    <friction>0.00040</friction>
                </dynamics>
            </axis>
            <physics>
                <ode>
                    <implicit_spring_damper>true</implicit_spring_damper>
                    <limit>
                        <cfm>0.0</cfm>
                        <erp>0.0</erp>
                    </limit>
                    <suspension>
                        <cfm>0.0</cfm>
                        <erp>0.0</erp>
                    </suspension>
                </ode>
            </physics>
        </joint>
        <joint name='right_wheel_joint' type='revolute'>
            <parent>base</parent>
            <child>right_wheel</child>
            <pose>0 0 0 0 0 0</pose>
            <axis>
                <xyz>0 0 1</xyz>
                <use_parent_model_frame>0</use_parent_model_frame>
                <limit>
                    <effort>0.016</effort> <!-- 16 kg-cm -->
                    <velocity>41.88</velocity> <!-- ~400 rpm -->
                </limit>
                <dynamics>
                    <damping>0.00058</damping>
                    <friction>0.00040</friction>
                </dynamics>
            </axis>
            <physics>
                <ode>
                    <implicit_spring_damper>true</implicit_spring_damper>
                    <limit>
                        <cfm>0</cfm>
                        <erp>0.0</erp>
                    </limit>
                    <suspension>
                        <cfm>0</cfm>
                        <erp>0.0</erp>
                    </suspension>
                </ode>
            </physics>
        </joint>

        <plugin name='tether_plugin' filename='libtether_plugin.so'>
            <num_links><%=n_links%></num_links>
        </plugin>

        <plugin name='car_plugin' filename='libcar_plugin.so'>
        </plugin>

        <joint type='revolute' name='world_joint'>
            <parent>world</parent>
            <child>link_1</child>
            <axis>
                <xyz>1 0 0</xyz>
                <dynamics>
                    <damping>0.001</damping>
                    <friction>0.001</friction>
                </dynamics>
            </axis>
        </joint>
    </model>
</sdf>
