<launch>
    <!-- Joint state publisher gui -->
    <arg name="gui" default="false"/>

    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find link_bot_description)/config/link_bot_control.yaml" command="load"/>

    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen"
          ns="/link_bot" args="joint_state_controller"/>

    <!-- State publishers -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" ns="link_bot">
        <param name="publish_frequency" type="double" value="50"/>
        <!--<remap from="joint_states" to="link_bot/joint_states" />-->
    </node>
</launch>
