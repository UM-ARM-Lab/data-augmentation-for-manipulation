<?xml version="1.0"?>
<robot name="link_bot">
    <link name="tail">
        <visual>
            <origin rpy="0 -1.5707 0" xyz="0.5 0 0"/>
            <geometry>
                <cylinder length="1" radius="0.1"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 -1.5707 0" xyz="0.5 0 0"/>
            <geometry>
                <box size="0.2 0.2 1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="10"/>
            <!-- 1/3*m*l^2 = 1/3*10*1^2 = 10/3 -->
            <inertia ixx="3.333" ixy="0" ixz="0" iyy="0" iyz="0" izz="3.333"/>
            <origin rpy="0 0 0" xyz="0.5 0 0"/>
        </inertial>
    </link>
    <link name="mid">
        <visual>
            <origin rpy="0 -1.5707 0" xyz="0.5 0 0"/>
            <geometry>
                <cylinder length="1" radius="0.1"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 -1.5707 0" xyz="0.5 0 0"/>
            <geometry>
                <box size="0.2 0.2 1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="10"/>
            <!-- 1/3*m*l^2 = 1/3*10*1^2 = 10/3 -->
            <inertia ixx="3.333" ixy="0" ixz="0" iyy="0" iyz="0" izz="3.333"/>
            <origin rpy="0 0 0" xyz="0.5 0 0"/>
        </inertial>
    </link>
    <link name="head">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
        </visual>
        <collision name="head">
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.2 0.2 0.2"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.0004" ixy="0" ixz="0" iyy="0.0004" iyz="0" izz="0.004"/>
        </inertial>
    </link>
    <joint name="joint" type="revolute">
        <parent link="tail"/>
        <child link="mid"/>
        <origin xyz="1 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3" upper="3" effort="10" velocity="1"/>
        <dynamics damping="1.0" friction="0.0"/>
    </joint>
    <joint name="head_joint" type="revolute">
        <parent link="mid"/>
        <child link="head"/>
        <origin xyz="1 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3" upper="3" effort="10" velocity="1"/>
        <dynamics damping="1.0" friction="0.0"/>
    </joint>
    <gazebo reference="tail">
        <mu1>0.4</mu1>
        <mu2>0.4</mu2>
        <material>Gazebo/Gray</material>
    </gazebo>
    <gazebo reference="mid">
        <mu1>0.4</mu1>
        <mu2>0.4</mu2>
        <material>Gazebo/Green</material>
    </gazebo>
    <gazebo reference="head">
        <mu1>0.4</mu1>
        <mu2>0.4</mu2>
        <material>Gazebo/Blue</material>
        <sensor name='my_contact' type='contact'>
            <contact>
                <collision>head_collision</collision>
            </contact>
            <plugin name="head_gazebo_ros_bumper_controller" filename="libgazebo_ros_bumper.so">
                <alwaysOn>true</alwaysOn>
                <updateRate>5</updateRate>
                <bumperTopicName>head_contact</bumperTopicName>
            </plugin>
        </sensor>
    </gazebo>
    <gazebo>
        <plugin name="linkbot_model_plugin" filename="liblinkbot_model_plugin.so">
            <kP>600.0</kP>
            <kI>10.0</kI>
            <kD>1.0</kD>
            <action_scale>1</action_scale>
        </plugin>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <legacyModeNS>false</legacyModeNS>
            <robotNamespace>link_bot</robotNamespace>
        </plugin>
    </gazebo>
</robot>
