<%num_links = 7%>
<%mass = 2.0%>
<%length = 1.0%>
<%radius = 0.02%>
<%link_length = length/num_links%>
<%collision_link_length = link_length - radius%>
<%link_mass = 10.0/num_links%>
<?xml version="1.0"?>
<robot name="link_bot">
    <% for i in 0..num_links %>
    <link name="link_<%=i%>">
        <visual>
            <origin rpy="0 -1.5707 0" xyz="<%=link_length / 2.0 - radius / 2.0%> 0 0"/>
            <geometry>
                <cylinder length="<%=link_length%>" radius="<%=radius%>"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 -1.5707 0" xyz="<%=link_length / 2.0 - radius / 2.0%> 0 0"/>
            <geometry>
                <box size="<%=radius*2%> <%=radius*2%> <%=collision_link_length%>"/>
            </geometry>
            <surface>
                <contact>
                    <ode>
                        <max_vel>0.00</max_vel>
                        <min_depth>0.01</min_depth>
                    </ode>
                </contact>
            </surface>
        </collision>
        <inertial>
            <mass value="<%=link_mass%>"/>
            <inertia ixx="3.333" ixy="0" ixz="0" iyy="0" iyz="0" izz="3.333"/>
            <origin rpy="0 0 0" xyz="<%=link_length - radius / 2.0%> 0 0"/>
        </inertial>
    </link>
    <% end %>

    <link name="head">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <sphere radius="<%=radius%>"/>
            </geometry>
        </visual>
        <collision name="head">
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="<%=radius%> <%=radius%> <%=radius%>"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.0004" ixy="0" ixz="0" iyy="0.0004" iyz="0" izz="0.004"/>
        </inertial>
    </link>

    <% for i in 0..num_links-1 %>
    <joint name="joint_<%=i%>" type="revolute">
        <parent link="link_<%=i%>"/>
        <child link="link_<%=i+1%>"/>
        <origin xyz="<%=link_length - radius/2.0%> 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3" upper="3" effort="10" velocity="1"/>
        <dynamics damping="1" friction="0.0"/>
    </joint>
    <% end %>

    <joint name="head_joint" type="revolute">
        <parent link="link_<%=num_links%>"/>
        <child link="head"/>
        <origin xyz="<%=link_length - radius/2.0%> 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3" upper="3" effort="10" velocity="1"/>
        <dynamics damping="1.0" friction="0.0"/>
    </joint>

    <% for i in 0..num_links %>
    <gazebo reference="link_<%=i%>">
        <self_collide>true</self_collide>
    </gazebo>
    <% end %>
    <gazebo reference="head">
        <self_collide>true</self_collide>
    </gazebo>

    <gazebo reference="tail">
        <mu1>0.4</mu1>
        <mu2>0.4</mu2>
        <material>Gazebo/Gray</material>
    </gazebo>
    <gazebo reference="mid">
        <mu1>0.4</mu1>
        <mu2>0.4</mu2>
        <material>Gazebo/Green</material>
    </gazebo>
    <gazebo reference="head">
        <mu1>0.4</mu1>
        <mu2>0.4</mu2>
        <material>Gazebo/Blue</material>
        <sensor name='my_contact' type='contact'>
            <contact>
                <collision>head_collision</collision>
            </contact>
            <plugin name="head_gazebo_ros_bumper_controller" filename="libgazebo_ros_bumper.so">
                <alwaysOn>true</alwaysOn>
                <updateRate>5</updateRate>
                <bumperTopicName>head_contact</bumperTopicName>
            </plugin>
        </sensor>
    </gazebo>
    <gazebo>
        <plugin name="linkbot_model_plugin" filename="liblinkbot_model_plugin.so">
            <kP>600.0</kP>
            <kI>10.0</kI>
            <kD>1.0</kD>
            <action_scale>1</action_scale>
        </plugin>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <legacyModeNS>false</legacyModeNS>
            <robotNamespace>link_bot</robotNamespace>
        </plugin>
    </gazebo>
</robot>
