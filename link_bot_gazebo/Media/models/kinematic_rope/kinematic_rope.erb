<% n_links = ENV['n_links'].to_i
mass = ENV['mass'].to_f
length = ENV['length'].to_f
radius = ENV['radius'].to_f
link_length = length/n_links
link_mass = mass/n_links
colors = ["Red", "Orange", "Yellow", "Green", "Blue", "Purple", "White", "Black"]
joint_damping = 0.0005
n_colors = colors.length%>
<sdf version="1.6">
    <model name="link_bot">
        <pose frame="">0 0 0 0 0 0</pose>
        <% for i in 1..n_links %>
        <link name="link_<%=i%>">
            <pose frame=""><%=(i-1)*link_length + link_length/2 %> 0 0 3.14159 -1.57079 3.14159</pose>
            <inertial>
                <pose frame="">0 0 0 0 0 0</pose>
                <mass><%=link_mass%>
                </mass>
                <inertia>
                    <ixx><%=1.0/12.0*link_mass*(3*radius*radius + link_length*link_length)%>
                    </ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy><%=1.0/12.0*link_mass*(3*radius*radius + link_length*link_length)%>
                    </iyy>
                    <iyz>0</iyz>
                    <izz><%=0.5*link_mass*radius*radius%>
                    </izz>
                </inertia>
            </inertial>
            <collision name="link_<%=i%>_collision">
                <pose frame="">0 0 0 0 0 0</pose>
                <geometry>
                    <cylinder>
                        <length><%=link_length%></length>
                        <radius><%=radius%></radius>
                    </cylinder>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>0.20</mu>
                            <mu2>0.20</mu2>
                        </ode>
                    </friction>
                    <contact>
                        <ode>
                            <kp>1e15</kp>
                            <kd>1e13</kd>
                        </ode>
                    </contact>
                </surface>
            </collision>

            <collision name="link_<%=i%>_collision_ball1">
                <pose frame="">0 0 <%=link_length/2%> 0 0 0</pose>
                <geometry>
                    <sphere>
                        <radius><%=radius%></radius>
                    </sphere>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>0.20</mu>
                            <mu2>0.20</mu2>
                        </ode>
                    </friction>
                    <contact>
                        <ode>
                            <kp>1e15</kp>
                            <kd>1e13</kd>
                        </ode>
                    </contact>
                </surface>
            </collision>

            <collision name="link_<%=i%>_collision_ball2">
                <pose frame="">0 0 <%=-link_length/2%> 0 0 0</pose>
                <geometry>
                    <sphere>
                        <radius><%=radius%></radius>
                    </sphere>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>0.20</mu>
                            <mu2>0.20</mu2>
                        </ode>
                    </friction>
                    <contact>
                        <ode>
                            <kp>1e15</kp>
                            <kd>1e13</kd>
                        </ode>
                    </contact>
                </surface>
            </collision>

            <visual name="link_<%=i%>_visual">
                <cast_shadows>0</cast_shadows>
                <pose frame="">0 0 0 0 0 0</pose>
                <geometry>
                    <cylinder>
                        <length><%=link_length%>
                        </length>
                        <radius><%=radius%>
                        </radius>
                    </cylinder>
                </geometry>
                <material>
                    <script>
                        <name>Gazebo/<%=colors[i%n_colors]%> </name>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                    </script>
                </material>
            </visual>
            <self_collide>1</self_collide>
        </link>
        <%end%>
        <% for i in 1..n_links-1 %>
        <joint name="joint_<%=i%>" type="universal">
            <child>link_<%=i+1%></child>
            <parent>link_<%=i%></parent>
            <pose>0 0 <%=link_length/2%> 0 0 0 </pose>
            <axis>
                <xyz>0 0 1</xyz>
                <dynamics>
                    <damping><%=joint_damping%></damping>
                    <friction>0.0</friction>
                </dynamics>
                <use_parent_model_frame>1</use_parent_model_frame>
            </axis>
            <axis2>
                <xyz>0 1 0</xyz>
                <dynamics>
                    <damping><%=joint_damping%></damping>
                    <friction>0.0</friction>
                </dynamics>
                <use_parent_model_frame>1</use_parent_model_frame>
            </axis2>
            <physics>
                <ode>
                    <cfm>0.001</cfm>
                    <implicit_spring_damper>1</implicit_spring_damper>
                </ode>
            </physics>
        </joint>
        <% end %>
        <link name='gripper1'>
            <pose frame=''><%=n_links * link_length%> 0 0 0 0 0 </pose>
            <inertial>
                <pose frame=''>0 0 0 0 0 0</pose>
                <mass>0.1</mass>
                <inertia>
                    <ixx>0.0001</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.0001</iyy>
                    <iyz>0</iyz>
                    <izz>0.001</izz>
                </inertia>
            </inertial>
            <collision name='gripper1_collision'>
                <pose frame=''>0 0 0 0 0 0</pose>
                <geometry>
                    <sphere>
                        <radius><%=radius%> </radius>
                    </sphere>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>0.0</mu>
                            <mu2>0.0</mu2>
                        </ode>
                    </friction>
                    <contact>
                        <ode>
                        </ode>
                    </contact>
                </surface>
            </collision>
            <visual name='gripper1_visual'>
                <cast_shadows>0</cast_shadows>
                <pose frame=''>0 0 0 0 0 0</pose>
                <geometry>
                    <sphere>
                        <radius><%=radius%>
                        </radius>
                    </sphere>
                </geometry>
                <material>
                    <script>
                        <name>Gazebo/Blue</name>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                    </script>
                </material>
            </visual>

            <self_collide>1</self_collide>
            <kinematic>true</kinematic>
        </link>
        <joint name="gripper1_joint" type="universal">
            <child>gripper1</child>
            <parent>link_<%=n_links%></parent>
            <pose>0 0 0 0 0 0</pose>
            <axis>
                <xyz>0 0 1</xyz>
                <dynamics>
                    <damping><%=joint_damping%></damping>
                    <friction>0.0</friction>
                </dynamics>
            </axis>
            <axis2>
                <xyz>0 1 0</xyz>
                <dynamics>
                    <damping><%=joint_damping%></damping>
                    <friction>0.0</friction>
                </dynamics>
            </axis2>
        </joint>
        <link name='gripper2'>
            <pose frame=''>0 0 0 0 0 0 </pose>
            <inertial>
                <pose frame=''>0 0 0 0 0 0</pose>
                <mass>0.1</mass>
                <inertia>
                    <ixx>0.0001</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.0001</iyy>
                    <iyz>0</iyz>
                    <izz>0.001</izz>
                </inertia>
            </inertial>
            <collision name='gripper2_collision'>
                <pose frame=''>0 0 0 0 0 0</pose>
                <geometry>
                    <sphere>
                        <radius><%=radius%> </radius>
                    </sphere>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>0.0</mu>
                            <mu2>0.0</mu2>
                        </ode>
                    </friction>
                    <contact>
                        <ode>
                        </ode>
                    </contact>
                </surface>
            </collision>
            <visual name='gripper2_visual'>
                <cast_shadows>0</cast_shadows>
                <pose frame=''>0 0 0 0 0 0</pose>
                <geometry>
                    <sphere>
                        <radius><%=radius%></radius>
                    </sphere>
                </geometry>
                <material>
                    <script>
                        <name>Gazebo/Red</name>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                    </script>
                </material>
            </visual>
            <self_collide>1</self_collide>
            <kinematic>true</kinematic>
        </link>
        <joint name="gripper2_joint" type="universal">
            <child>gripper2</child>
            <parent>link_1</parent>
            <pose>0 0 0 0 0 0</pose>
            <axis>
                <xyz>0 0 1</xyz>
                <dynamics>
                    <damping><%=joint_damping%></damping>
                    <friction>0.0</friction>
                </dynamics>
            </axis>
            <axis2>
                <xyz>0 1 0</xyz>
                <dynamics>
                    <damping><%=joint_damping%></damping>
                    <friction>0.0</friction>
                </dynamics>
            </axis2>
        </joint>
        <plugin name='rope_plugin' filename='librope_plugin.so'>
            <num_links><%=n_links%></num_links>
            <rope_length><%=length%></rope_length>
        </plugin>
        <plugin name='dual_gripper_plugin' filename='libdual_gripper_plugin.so'>
        </plugin>
    </model>
</sdf>
