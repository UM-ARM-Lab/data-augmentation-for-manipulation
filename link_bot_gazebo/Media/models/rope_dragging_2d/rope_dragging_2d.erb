<% n_links = ENV['n_links'].to_i
mass = ENV['mass'].to_f
length = ENV['length'].to_f
radius = ENV['radius'].to_f
link_length = length/n_links
link_mass = mass/n_links %>
<sdf version="1.6">
    <model name="link_bot">
        <pose frame="">0 0 0 0 0 0</pose>
        <% for i in 1..n_links %>
        <link name="rope_link_<%=i%>">
        <pose frame=""><%=i*link_length%> 0 0 3.14159 -1.57079 3.14159</pose>
        <inertial>
            <pose frame="">0 0 0 0 0 0</pose>
            <mass><%=link_mass%>
            </mass>
            <inertia>
                <ixx><%=1.0/12.0*link_mass*(3*radius*radius + link_length*link_length)%>
                </ixx>
                <ixy>0</ixy>
                <ixz>0</ixz>
                <iyy><%=1.0/12.0*link_mass*(3*radius*radius + link_length*link_length)%>
                </iyy>
                <iyz>0</iyz>
                <izz><%=0.5*link_mass*radius*radius%>
                </izz>
            </inertia>
        </inertial>
        <collision name="link_<%=i%>_collision">
            <pose frame="">0 0 0 0 0 0</pose>
            <geometry>
                <cylinder>
                    <length><%=link_length%></length>
                    <radius><%=radius%></radius>
                </cylinder>
            </geometry>
            <surface>
                <friction>
                    <ode>
                        <mu>0.50</mu>
                        <mu2>0.50</mu2>
                    </ode>
                </friction>
                <contact>
                    <ode>
                        <kp>1e15</kp>
                        <kd>1e13</kd>
                    </ode>
                </contact>
            </surface>
        </collision>

        <collision name="link_<%=i%>_collision_ball1">
            <pose frame="">0 0 <%=link_length/2%> 0 0 0</pose>
            <geometry>
                <sphere>
                    <radius><%=radius%></radius>
                </sphere>
            </geometry>
            <surface>
                <friction>
                    <ode>
                        <mu>0.50</mu>
                        <mu2>0.50</mu2>
                    </ode>
                </friction>
                <contact>
                    <ode>
                        <kp>1e15</kp>
                        <kd>1e13</kd>
                    </ode>
                </contact>
            </surface>
        </collision>

        <collision name="link_<%=i%>_collision_ball2">
            <pose frame="">0 0 <%=-link_length/2%> 0 0 0</pose>
            <geometry>
                <sphere>
                    <radius><%=radius%></radius>
                </sphere>
            </geometry>
            <surface>
                <friction>
                    <ode>
                        <mu>0.50</mu>
                        <mu2>0.50</mu2>
                    </ode>
                </friction>
                <contact>
                    <ode>
                        <kp>1e15</kp>
                        <kd>1e13</kd>
                        <max_vel>0</max_vel>
                    </ode>
                </contact>
            </surface>
        </collision>



        <visual name="link_<%=i%>_visual">
            <cast_shadows>0</cast_shadows>
            <pose frame="">0 0 0 0 0 0</pose>
            <geometry>
                <cylinder>
                    <length><%=link_length%>
                    </length>
                    <radius><%=radius%>
                    </radius>
                </cylinder>
            </geometry>
            <material>
                <ambient>0.8 0.80 0.39 1.0</ambient>
                <diffuse>0.9 0.70 0.29 1.0</diffuse>
            </material>
        </visual>
        <self_collide>1</self_collide>
        </link>
        <%end%>
        <% for i in 1..n_links-1 %>
        <joint name="joint_<%=i%>" type="universal">
            <child>rope_link_<%=i+1%></child>
            <parent>rope_link_<%=i%></parent>
            <pose>0 0 <%=link_length/2%> 0 0 0 </pose>
            <axis>
                <xyz>0 0 1</xyz>
                <limit>
                    <lower>-2.0</lower>
                    <upper>2.0</upper>
                    <effort>10</effort>
                    <velocity>5</velocity>
                </limit>
                <dynamics>
                    <damping>0.0001</damping>
                    <friction>0</friction>
                </dynamics>
                <use_parent_model_frame>1</use_parent_model_frame>
            </axis>
            <axis2>
                <xyz>0 1 0</xyz>
                <limit>
                    <lower>-2.0</lower>
                    <upper>2.0</upper>
                    <effort>10</effort>
                    <velocity>5</velocity>
                </limit>
                <dynamics>
                    <damping>0.0001</damping>
                    <friction>0</friction>
                </dynamics>
                <use_parent_model_frame>1</use_parent_model_frame>
            </axis2>
            <physics>
                <ode>
                </ode>
            </physics>
        </joint>
        <% end %>
        <link name='head'>
        <pose frame=''><%=n_links*link_length + link_length/2%> 0 0 0 0 0 </pose>
        <inertial>
            <pose frame=''>0 0 0 0 0 0</pose>
            <mass>0.1</mass>
            <inertia>
                <ixx>0.0001</ixx>
                <ixy>0</ixy>
                <ixz>0</ixz>
                <iyy>0.0001</iyy>
                <iyz>0</iyz>
                <izz>0.001</izz>
            </inertia>
        </inertial>
        <collision name='head_collision'>
            <pose frame=''>0 0 0 0 0 0</pose>
            <geometry>
                <sphere>
                    <radius><%=radius%> </radius>
                </sphere>
            </geometry>
            <surface>
                <contact>
                    <ode>
                        <kp>1e15</kp>
                        <kd>1e13</kd>
                    </ode>
                </contact>
                <friction>
                    <ode>
                        <mu>0.0</mu>
                        <mu2>0.0</mu2>
                    </ode>
                </friction>
            </surface>
        </collision>
        <visual name='head_visual'>
            <cast_shadows>0</cast_shadows>
            <pose frame=''>0 0 0 0 0 0</pose>
            <geometry>
                <sphere>
                    <radius><%=radius%></radius>
                </sphere>
            </geometry>
            <material>
                <script>
                    <name>Gazebo/Red</name>
                    <uri>file://media/materials/scripts/gazebo.material</uri>
                </script>
            </material>
        </visual>
        <self_collide>1</self_collide>
        </link>
        <joint name="head_joint" type="universal">
            <child>head</child>
            <parent>rope_link_<%=n_links%></parent>
            <pose>0 0 0 0 0 0</pose>
            <axis>
                <xyz>0 0 1</xyz>
                <dynamics>
                    <damping>0.001</damping>
                    <friction>1.0</friction>
                </dynamics>
            </axis>
            <axis2>
                <xyz>0 1 0</xyz>
                <dynamics>
                    <damping>0.001</damping>
                    <friction>1.0</friction>
                </dynamics>
            </axis2>
            <physics>
                <ode>
                    <cfm_damping>true</cfm_damping>
                    <limit>
                        <cfm>100</cfm>
                    </limit>
                </ode>
            </physics>
        </joint>
        <plugin name='rope_plugin' filename='librope_plugin.so'>
            <num_links><%=n_links%></num_links>
            <rope_length><%=length%></rope_length>
        </plugin>
        <plugin name='position_3d_plugin' filename='libposition_3d_plugin.so'>
            <object_name>gripper</object_name>
            <gravity_compensation>true</gravity_compensation>
            <kP_pos>5</kP_pos>
            <kD_pos>0.0</kD_pos>
            <kP_vel>200.0</kP_vel>
            <kI_vel>0.05</kI_vel>
            <kD_vel>0.0</kD_vel>
            <max_force>2.0</max_force>
            <max_vel>0.15</max_vel>
            <kP_rot>0.0</kP_rot>
            <kI_rot>0.0</kI_rot>
            <kD_rot>0.0</kD_rot>
            <kP_rot_vel>0.0</kP_rot_vel>
            <kI_rot_vel>0.0</kI_rot_vel>
            <kD_rot_vel>0.0</kD_rot_vel>
            <max_torque>0.0</max_torque>
            <max_rot_vel>0.0</max_rot_vel>
            <link>head</link>
        </plugin>
    </model>
</sdf>
