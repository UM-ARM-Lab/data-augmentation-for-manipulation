<%size = 1.0%>
<%wall_thickness = 0.01%>
<?xml version="1.0" ?>
<sdf version="1.5">
<model name="arena_<%=size%>m">
    <static>true</static>
    <link name="north_wall">
      <pose>0 <%=size/2%> 0.05 0 0 0</pose>
      <visual name="visual">
        <cast_shadows>0</cast_shadows>
        <geometry>
          <box>
          <size><%=size+wall_thickness%> <%= wall_thickness%> 0.1</size>
          </box>
        </geometry>
      </visual>
      <collision name="collision">
        <geometry>
          <box>
          <size><%=size+wall_thickness%> <%=wall_thickness%> 0.1</size>
          </box>
        </geometry>
      </collision>
    </link>
    <link name="south_wall">
      <pose>0 <%=-size/2%> 0.05 0 0 0</pose>
      <visual name="visual">
        <cast_shadows>0</cast_shadows>
        <geometry>
          <box>
          <size><%=size+wall_thickness%> <%=wall_thickness%> 0.1</size>
          </box>
        </geometry>
      </visual>
      <collision name="collision">
        <geometry>
          <box>
          <size><%=size+wall_thickness%> <%=wall_thickness%> 0.1</size>
          </box>
        </geometry>
      </collision>
    </link>
    <link name="east_wall">
      <pose><%=size/2%> 0 0.05 0 0 0</pose>
      <visual name="visual">
        <cast_shadows>0</cast_shadows>
        <geometry>
          <box>
          <size><%=wall_thickness%> <%=size+wall_thickness%> 0.1</size>
          </box>
        </geometry>
      </visual>
      <collision name="collision">
        <geometry>
          <box>
          <size><%=wall_thickness%> <%=size+wall_thickness%> 0.1</size>
          </box>
        </geometry>
      </collision>
    </link>
    <link name="west_wall">
      <pose><%=-size/2%> 0 0.05 0 0 0</pose>
      <visual name="visual">
        <cast_shadows>0</cast_shadows>
        <geometry>
          <box>
          <size><%=wall_thickness%> <%=size+wall_thickness%> 0.1</size>
          </box>
        </geometry>
      </visual>
      <collision name="collision">
        <geometry>
          <box>
          <size><%=wall_thickness%> <%=size+wall_thickness%> 0.1</size>
          </box>
        </geometry>
      </collision>
    </link>
  </model>
</sdf>

