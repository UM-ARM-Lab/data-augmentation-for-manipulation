<% n_links = ENV['n_links'].to_i
mass = ENV['mass'].to_f
length = ENV['length'].to_f
radius = ENV['radius'].to_f
link_length = length/n_links
link_mass = mass/n_links
color = "Red"%>
<sdf version="1.6">
    <model name="dragging_rope">
        <pose frame="">0 0 <%=radius/2%> 0 0 0</pose>
        <% for i in 1..n_links %>
        <link name="rope_link_<%=i%>">
        <pose frame=""><%=(i-1)*link_length + link_length/2%> 0 0 3.14159 -1.57079 3.14159</pose>
        <inertial>
            <pose frame="">0 0 0 0 0 0</pose>
            <mass><%=link_mass%></mass>
            <inertia>
                <ixx><%=1.0/12.0*link_mass*(3*radius*radius + link_length*link_length)%></ixx>
                <ixy>0</ixy>
                <ixz>0</ixz>
                <iyy><%=1.0/12.0*link_mass*(3*radius*radius + link_length*link_length)%></iyy>
                <iyz>0</iyz>
                <izz><%=0.5*link_mass*radius*radius%></izz>
            </inertia>
        </inertial>
        <collision name="link_<%=i%>_collision">
            <pose frame="">0 0 0 0 0 0</pose>
            <geometry>
                <box>
                    <size><%=2*radius%> <%=2*radius%> <%=link_length*0.9%></size>
                </box>
            </geometry>
            <surface>
                <friction>
                    <ode>
                        <mu>0.10</mu>
                        <mu2>0.10</mu2>
                    </ode>
                </friction>
                <contact>
                    <ode>
                        <kp>1e15</kp>
                        <kd>1e13</kd>
                    </ode>
                </contact>
            </surface>
        </collision>

        <visual name="link_<%=i%>_visual">
            <cast_shadows>0</cast_shadows>
            <pose frame="">0 0 0 0 0 0</pose>
            <geometry>
                <cylinder>
                    <length><%=link_length%></length>
                    <radius><%=radius%></radius>
                </cylinder>
            </geometry>
            <material>
                <script>
                    <name>Gazebo/<%=color%></name>
                    <uri>file://media/materials/scripts/gazebo.material</uri>
                </script>
            </material>
        </visual>
        <self_collide>1</self_collide>
        </link>
        <%end%>
        <% for i in 1..n_links-1 %>
        <joint name="joint_<%=i%>" type="revolute2">
            <parent>rope_link_<%=i+1%></parent>
            <child>rope_link_<%=i%></child>
            <pose>0 0 <%=-link_length/2%> 0 0 0</pose>
            <axis>
                <xyz>1 0 0</xyz>
                <limit>
                    <lower>-1.0</lower>
                    <upper>1.0</upper>
                    <effort>10</effort>
                    <velocity>5</velocity>
                </limit>
                <dynamics>
                    <damping>0.0</damping>
                    <friction>0</friction>
                </dynamics>
            </axis>
            <axis2>
                <xyz>0 1 0</xyz>
                <limit>
                    <lower>-1.0</lower>
                    <upper>1.0</upper>
                    <effort>10</effort>
                    <velocity>5</velocity>
                </limit>
                <dynamics>
                    <damping>0.0</damping>
                    <friction>0</friction>
                </dynamics>
            </axis2>
            <physics>
                <ode>
                    <cfm>0.0001</cfm>
                    <implicit_spring_damper>1</implicit_spring_damper>
                </ode>
            </physics>
        </joint>
        <% end %>
        <link name='head'>
        <pose frame=''>0 0 0 0 0 0 </pose>
        <inertial>
            <pose frame=''>0 0 0 0 0 0</pose>
            <mass>0.1</mass>
            <inertia>
                <ixx>0.0001</ixx>
                <ixy>0</ixy>
                <ixz>0</ixz>
                <iyy>0.0001</iyy>
                <iyz>0</iyz>
                <izz>0.001</izz>
            </inertia>
        </inertial>
        <collision name='head_collision'>
            <pose frame=''>0 0 0 0 0 0</pose>
            <geometry>
                <sphere>
                    <radius><%=radius%> </radius>
                </sphere>
            </geometry>
            <surface>
                <contact>
                    <ode>
                        <kp>1e15</kp>
                        <kd>1e13</kd>
                    </ode>
                </contact>
                <friction>
                    <ode>
                        <mu>0.10</mu>
                        <mu2>0.10</mu2>
                    </ode>
                </friction>
            </surface>
        </collision>
        <visual name='head_visual'>
            <cast_shadows>0</cast_shadows>
            <pose frame=''>0 0 0 0 0 0</pose>
            <geometry>
                <sphere>
                    <radius><%=radius%></radius>
                </sphere>
            </geometry>
            <material>
                <script>
                    <name>Gazebo/Blue</name>
                    <uri>file://media/materials/scripts/gazebo.material</uri>
                </script>
            </material>
        </visual>
        <self_collide>1</self_collide>
        </link>
        <joint name="head_joint" type="revolute">
            <child>head</child>
            <parent>rope_link_1</parent>
            <pose>0 0 0 0 0 0</pose>
            <axis>
                <xyz>0 0 1</xyz>
                <dynamics>
                    <damping>0.0</damping>
                    <friction>0.0</friction>
                </dynamics>
            </axis>
            <physics>
                <ode>
                    <cfm>0.0005</cfm>
                    <implicit_spring_damper>1</implicit_spring_damper>
                </ode>
            </physics>
        </joint>
        <plugin name='rope_plugin' filename='librope_plugin.so'>
            <num_links><%=n_links%></num_links>
            <overstretching_factor>1.3</overstretching_factor>
        </plugin>
    </model>
</sdf>
