<% n_links = ENV['n_links'].to_i
mass = ENV['mass'].to_f
length = ENV['length'].to_f
radius = ENV['radius'].to_f
gripper_radius = ENV['gripper_radius'].to_f
link_length = length/n_links
link_mass = mass/n_links
omega = 0.0
joint_damping = 0.01
joint_friction = 1.0 %>
<sdf version="1.6">
    <model name="stiff_rope">
        <allow_auto_disable>true</allow_auto_disable>
        <pose frame="">0 0 0 0 0 0</pose>
        <% for i in 1..n_links %>
        <link name="rope_link_<%=i%>">
            <pose frame=""><%=(i-1)*link_length + link_length/2 %> 0 0 3.14159 -1.57079 3.14159</pose>
            <inertial>
                <pose frame="">0 0 0 0 0 0</pose>
                <mass><%=link_mass%>
                </mass>
                <inertia>
                    <ixx><%=1.0/12.0*link_mass*(3*radius*radius + link_length*link_length)%>
                    </ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy><%=1.0/12.0*link_mass*(3*radius*radius + link_length*link_length)%>
                    </iyy>
                    <iyz>0</iyz>
                    <izz><%=0.5*link_mass*radius*radius%>
                    </izz>
                </inertia>
            </inertial>
            <collision name="link_<%=i%>_collision">
                <max_contacts>2</max_contacts>
                <pose frame="">0 0 0 0 0 0</pose>
                <geometry>
                    <cylinder>
                        <length><%=link_length%></length>
                        <radius><%=radius%></radius>
                    </cylinder>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>10.00</mu>
                            <mu2>10.00</mu2>
                        </ode>
                    </friction>
                    <contact>
                        <ode>
                            <kp>1e15</kp>
                            <kd>1e11</kd>
                        </ode>
                    </contact>
                </surface>
            </collision>

            <collision name="link_<%=i%>_collision_ball1">
                <max_contacts>2</max_contacts>
                <pose frame="">0 0 <%=link_length/2%> 0 0 0</pose>
                <geometry>
                    <sphere>
                        <radius><%=radius%></radius>
                    </sphere>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>1.00</mu>
                            <mu2>1.00</mu2>
                        </ode>
                    </friction>
                    <contact>
                        <ode>
                            <kp>1e15</kp>
                            <kd>1e11</kd>
                        </ode>
                    </contact>
                </surface>
            </collision>

            <collision name="link_<%=i%>_collision_ball2">
                <max_contacts>2</max_contacts>
                <pose frame="">0 0 <%=-link_length/2%> 0 0 0</pose>
                <geometry>
                    <sphere>
                        <radius><%=radius%></radius>
                    </sphere>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>1.00</mu>
                            <mu2>1.00</mu2>
                        </ode>
                    </friction>
                    <contact>
                        <ode>
                            <kp>1e15</kp>
                            <kd>1e11</kd>
                        </ode>
                    </contact>
                </surface>
            </collision>

            <visual name="link_<%=i%>_visual">
                <cast_shadows>0</cast_shadows>
                <pose frame="">0 0 0 0 0 0</pose>
                <geometry>
                    <cylinder>
                        <length><%=link_length%>
                        </length>
                        <radius><%=radius%>
                        </radius>
                    </cylinder>
                </geometry>
                <material>
                    <script>
                        <name>Gazebo/Red</name>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                    </script>
                </material>
            </visual>
            <self_collide>1</self_collide>
        </link>
        <%end%>
        <% for i in 1..n_links-1 %>
        <joint name="joint_<%=i%>" type="universal">
            <parent>rope_link_<%=i+1%></parent>
            <child>rope_link_<%=i%></child>
            <pose>0 0 <%=-link_length/2%> 0 0 0</pose>
            <axis>
                <xyz>0 <%=Math.sin((i-1)*omega)%> <%=Math.cos((i-1)*omega)%></xyz>
                <dynamics>
                    <damping><%=joint_damping%></damping>
                    <friction><%=joint_friction%></friction>
                </dynamics>
                <use_parent_model_frame>1</use_parent_model_frame>
            </axis>
            <axis2>
                <xyz>0 <%=Math.sin((i-1)*omega + Math::PI/2)%> <%=Math.cos((i-1)*omega + Math::PI/2)%></xyz>
                <dynamics>
                    <damping><%=joint_damping%></damping>
                    <friction><%=joint_friction%></friction>
                </dynamics>
                <use_parent_model_frame>1</use_parent_model_frame>
            </axis2>
            <physics>
                <ode>
                    <cfm>0.0005</cfm>
                    <implicit_spring_damper>1</implicit_spring_damper>
                </ode>
            </physics>
        </joint>
        <% end %>
        <link name='left_gripper'>
            <pose frame=''>0 0 0 0 0 0 </pose>
            <inertial>
                <pose frame=''>0 0 0 0 0 0</pose>
                <mass>0.001</mass>
                <inertia>
                    <ixx>0.000007</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.000007</iyy>
                    <iyz>0</iyz>
                    <izz>0.000007</izz>
                </inertia>
            </inertial>
            <collision name='left_gripper_collision'>
                <max_contacts>2</max_contacts>
                <pose frame=''>0 0 0 0 0 0</pose>
                <geometry>
                    <sphere>
                        <radius><%=radius%></radius>
                    </sphere>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>1.0</mu>
                            <mu2>1.0</mu2>
                        </ode>
                    </friction>
                    <contact>
                        <ode>
                        </ode>
                    </contact>
                </surface>
            </collision>
            <visual name='left_gripper_visual'>
                <cast_shadows>0</cast_shadows>
                <pose frame=''>0 0 0 0 0 0</pose>
                <geometry>
                    <sphere>
                        <radius><%=gripper_radius%></radius>
                    </sphere>
                </geometry>
                <material>
                    <script>
                        <name>Gazebo/Blue</name>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                    </script>
                </material>
            </visual>

            <self_collide>1</self_collide>
        </link>
        <joint name="left_gripper_joint" type="fixed">
            <child>left_gripper</child>
            <parent>rope_link_1</parent>
            <pose>0 0 0 0 0 0</pose>
            <physics>
                <ode>
                    <cfm>0.01</cfm>
                    <implicit_spring_damper>1</implicit_spring_damper>
                </ode>
            </physics>
        </joint>
        <link name='right_gripper'>
            <pose frame=''><%=n_links * link_length%> 0 0 0 0 0 </pose>
            <inertial>
                <pose frame=''>0 0 0 0 0 0</pose>
                <mass>0.001</mass>
                <inertia>
                    <ixx>0.000007</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.000007</iyy>
                    <iyz>0</iyz>
                    <izz>0.000007</izz>
                </inertia>
            </inertial>
            <collision name='right_gripper_collision'>
                <max_contacts>2</max_contacts>
                <pose frame=''>0 0 0 0 0 0</pose>
                <geometry>
                    <sphere>
                        <radius><%=radius%> </radius>
                    </sphere>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>1.0</mu>
                            <mu2>1.0</mu2>
                        </ode>
                    </friction>
                    <contact>
                        <ode>
                        </ode>
                    </contact>
                </surface>
            </collision>
            <visual name='right_gripper_visual'>
                <cast_shadows>0</cast_shadows>
                <pose frame=''>0 0 0 0 0 0</pose>
                <geometry>
                    <sphere>
                        <radius><%=gripper_radius%></radius>
                    </sphere>
                </geometry>
                <material>
                    <script>
                        <name>Gazebo/Yellow</name>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                    </script>
                </material>
            </visual>
            <self_collide>1</self_collide>
        </link>
        <joint name="right_gripper_joint" type="fixed">
            <parent>rope_link_<%=n_links%></parent>
            <child>right_gripper</child>
            <pose>0 0 0 0 0 0</pose>
            <physics>
                <ode>
                    <cfm>0.01</cfm>
                    <implicit_spring_damper>1</implicit_spring_damper>
                </ode>
            </physics>
        </joint>
        <plugin name='rope_plugin' filename='librope_plugin.so'>
            <num_links><%=n_links%></num_links>
            <overstretching_factor>1.04</overstretching_factor>
        </plugin>
    </model>
</sdf>
