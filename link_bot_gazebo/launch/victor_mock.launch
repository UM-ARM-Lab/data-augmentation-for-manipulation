<launch>
    <arg name="world_name" default="tabletop"/>
    <arg name="verbose" default="false"/>
    <arg name="gui" default="true"/>
    <arg name="n_links" default="10"/>
    <arg name="spawn_x" default="0.20"/>
    <arg name="spawn_y" default="0.0"/>
    <arg name="spawn_yaw" default="-1.5707"/>

    <remap from="/gazebo/reset_simulation" to="/reset"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find link_bot_gazebo)/worlds/$(arg world_name).world"/>
        <arg name="verbose" default="$(arg verbose)"/>
        <arg name="paused" default="true"/>
        <arg name="gui" value="$(arg gui)"/>
    </include>

    <!-- Spawn a robot into Gazebo -->
<!--    <node name="spawn" pkg="gazebo_ros" type="spawn_model"-->
<!--          args="-file $(find link_bot_description)/sdf/real_rope.sdf -sdf -x $(arg spawn_x) -y $(arg spawn_y) -Y $(arg spawn_yaw) -z 0.01 -model link_bot"/>-->
</launch>
