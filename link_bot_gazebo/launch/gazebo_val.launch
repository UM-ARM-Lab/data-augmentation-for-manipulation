<launch>
    <arg name="world_name"  default="val_table_rope"/>
    <arg name="verbose"     default="false"/>
    <arg name="gui"         default="true"/>
    <arg name="pause"       default="true"/>
    <arg name="debug"       default="false"/>

    <include file="$(find hdt_michigan_moveit)/launch/planning_context.launch">
        <arg name="load_robot_description" value="true"/>
    </include>
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher"/>

    <include file="$(find physical_robot_3d_rope_shim)/launch/static_transforms.launch">
        <arg name="use_sim_time" value="false"/>
        <arg name="use_val" value="true"/>
        <arg name="use_mocap_shims" value="false"/>
    </include>
    <group ns="static_transform_publishers">
        <node pkg="tf2_ros" type="static_transform_publisher" name="rename_origin" required="true"
              args="0 0 0 0 0 0 robot_root world">
            <param name="use_sim_time" value="false"/>
        </node>
    </group>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name"   value="$(find link_bot_gazebo)/worlds/$(arg world_name).world"/>
        <arg name="verbose"      default="$(arg verbose)"/>
        <arg name="paused"       default="$(arg pause)"/>
        <arg name="use_sim_time" value="false"/>
        <arg name="gui"          value="$(arg gui)"/>
        <arg name="debug"        default="$(arg debug)"/>
    </include>

</launch>
