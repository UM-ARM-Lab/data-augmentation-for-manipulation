<launch>
    <arg name="gui" default="true"/>
    <include file="$(find link_bot_description)/launch/rope_description.launch">
    </include>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find link_bot_gazebo)/worlds/stepping_plugin.world"/>
        <arg name="paused" default="true"/>
        <arg name="verbose" default="true"/>
        <arg name="gui" value="$(arg gui)"/>
    </include>

    <!-- Spawn a robot into Gazebo -->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
          args="-urdf -file $(find link_bot_description)/urdf/rope.urdf -z 0.1 -model rope"/>
</launch>
