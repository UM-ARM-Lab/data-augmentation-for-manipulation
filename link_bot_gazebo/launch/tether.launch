<launch>
    <arg name="verbose" default="false"/>
    <arg name="gui" default="true"/>

    <remap from="/gazebo/reset_simulation" to="/reset"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find link_bot_gazebo)/worlds/tether.world"/>
        <arg name="verbose" default="$(arg verbose)"/>
        <arg name="paused" default="true"/>
        <arg name="gui" value="$(arg gui)"/>
    </include>

    <!-- Spawn a robot into Gazebo -->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
          args="-file $(find link_bot_description)/sdf/long_tethered.sdf -sdf -Y 0.785 -z 0.02 -model link_bot"/>

    <node name="objects_server" pkg="link_bot_pycommon" type="objects_server.py"/>
</launch>
