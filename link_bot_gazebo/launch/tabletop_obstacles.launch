<launch>
    <arg name="world_name" default="worlds/no_arena.world"/>
    <arg name="verbose" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="spawn_x" default="-0.47"/>
    <arg name="spawn_y" default="0.0"/>
    <arg name="spawn_yaw" default="0"/>

    <include file="$(find link_bot_description)/launch/link_bot_description.launch">
    </include>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find link_bot_gazebo)/worlds/tabletop_obstacles.world"/>
        <arg name="verbose" default="$(arg verbose)"/>
        <arg name="paused" default="true"/>
        <arg name="gui" value="$(arg gui)"/>
    </include>

    <!-- Spawn a robot into Gazebo -->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
          args="-file $(find link_bot_description)/urdf/2_link_bot_small.urdf -urdf -x $(arg spawn_x) -y $(arg spawn_y) -Y $(arg spawn_yaw) -z 0.01 -model link_bot"/>
</launch>
