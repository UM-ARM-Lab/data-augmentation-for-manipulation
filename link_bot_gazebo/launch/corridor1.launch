<launch>
    <arg name="world_name" default="corridor1"/>
    <arg name="verbose" default="false"/>
    <arg name="gui" default="false"/>
    <arg name="n_links" default="10"/>
    <arg name="spawn_x" default="-1.5"/>
    <arg name="spawn_y" default="0.0"/>

    <arg name="spawn_yaw" default="0"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find link_bot_gazebo)/worlds/$(arg world_name).world"/>
        <arg name="verbose" default="$(arg verbose)"/>
        <arg name="paused" default="false"/>
        <arg name="gui" value="$(arg gui)"/>
    </include>

    <!-- Spawn a robot into Gazebo -->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
          args="-file $(find link_bot_description)/sdf/$(arg n_links)_link.sdf -sdf -x $(arg spawn_x) -y $(arg spawn_y) -Y $(arg spawn_yaw) -z 0.01 -model link_bot"/>
</launch>
